#!/bin/bash
#MSUB -S bash
#MSUB -l nodes=2048:ppn=16
#MSUB -l walltime=02:00:00
#MSUB -q pbatch
#MSUB -m be
#MSUB -V
#MSUB -A coral
#MSUB    -j oe
#MSUB    -o /g/g20/ghosh4/umt2013/bgq/Teton/2rack_16384_32x32x16_8_rpn_OMPperf2.out

Px=32
Py=32
Pz=16
Order=16
Groups=16
quadType=2
Xzones=12
Yzones=12
Zzones=12
Polar=8
Azim=4
Ranks=$((${Px}*${Py}*${Pz}))
UMTHOME=${HOME}/umt2013/UMT2_bgq
EXE=$UMTHOME/Install/bin/pyMPI
LDPATH=$UMTHOME/Teton:$UMTHOME/cmg2Kull/sources:$UMTHOME/CMG_CLEAN/src:$UMTHOME/python
export PYTHONPATH=$UMTHOME/python
#
# Input: SuOlsonTest $gridFileName $Groups $quadType $Order $Polar $Azim
# Allowed values:  <= quadType <= 1; <= npolar <= 18; 1 <= nazimuthal <= 22
#
#=======================================================================================
#=======================================================================================
gridFileName=grid_16384_12x12x12.cmg
for T in   8 4 2 1
do
export OMP_NUM_THREADS=$T
time srun -n 16384  -N 2048 ./SuOlsonTest $gridFileName $Groups $quadType $Order $Polar $Azim
done

